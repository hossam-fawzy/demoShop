<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    DemoWebShop Test Suite Configuration
    =====================================
    
    BEST PRACTICES APPLIED:
    - Organized test suites (Smoke, Regression, etc.)
    - Parallel execution configuration
    - Test groups for flexible execution
    - Proper listener configuration
    - Thread-safe execution settings
    
    USAGE:
    - Run all tests: mvn test
    - Run smoke tests only: mvn test -Dgroups=smoke
    - Run specific suite: Configure in IDE or use profiles
-->

<suite name="DemoWebShop Test Suite"
       verbose="2"
       parallel="false"
       thread-count="1"
       data-provider-thread-count="1">

    <!-- Listeners for better reporting and test execution -->
    <listeners>
        <!-- Allure Reporting - Must be first for proper integration -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>

        <!-- Custom Test Listener for logging and screenshots -->
        <listener class-name="listeners.TestListener"/>
    </listeners>


        <!-- ============================================ -->
        <!-- SMOKE TEST SUITE - Critical Path Tests      -->
        <!-- Run these tests sequentially                 -->
        <!-- ============================================ -->
        <test name="Smoke Tests" preserve-order="true">
            <classes>
                <!-- Run HomeTest first -->
                <class name="tests.HomeTest">
                </class>

                <class name="tests.LoginTest">
                </class>
            </classes>
        </test>







